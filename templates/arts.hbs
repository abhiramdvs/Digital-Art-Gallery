<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Arts | Digital Art Gallery</title>
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon_io/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon_io/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon_io/favicon-16x16.png" />
  <link rel="manifest" href="/favicon_io/site.webmanifest" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
  <link rel="stylesheet" href="arts.css" />
</head>

<body>
  <div id="userEmail">Hi,
    {{username}}!
    <div class="lout">
      <a href="loginpage">Logout</a>
    </div>
  </div>
  <header>Art Gallery</header>
  <button class="burger" onclick="toggleMenu()">
    <div class="background"></div>
    <div class="menu">
      <nav>
        <a id="homeLink" href="homepage" style="animation-delay: 0.3s;">Home</a>
        <a href="arts" style="animation-delay: 0.4s;">Arts</a>
        <a href="cart" href="#" style="animation-delay: 0.5s;">Cart</a>
        <a href="orders" href="#" style="animation-delay: 0.6s;">Orders</a>
        <a id="aboutLink" href="about" style="animation-delay: 0.7s;">About</a>
      </nav>
    </div>
    <script>
      const toggleMenu = () => document.body.classList.toggle("open");
    </script>
  </button>

  <div class="container">
    {{#each items}}
    <div class="row">
      <div class="card" style="width: 18rem;">
        <img src="https://source.unsplash.com/random/200x150?sig={{id}}" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">Price: ${{price}}</p>
          <a href="/add-to-cart/{{id}}" class="btn btn-secondary">Add to
            Cart</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <footer class="foot">
    <p>&copy; 2023 Digital Art Gallery. All rights reserved.</p>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
</body>

</html>