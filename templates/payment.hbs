    <input type="hidden" name="description" value="Payment for items">
    <input type="hidden" name="image" value="D:\Web Development\Project\public\favicon_io\android-chrome-512x512.png">
    <input type="hidden" name="prefill[name]" value="user_name">
    <input type="hidden" name="prefill[email]" value="user_email@example.com">
    <input type="hidden" name="notes[shipping_address]" value="shipping_address">
    <input type="hidden" name="notes[address]" value="address">
    <input type="hidden" name="notes[merchant_order_id]" value="{{order.id}}">
    <button type="submit" class="btn btn-primary">Pay Now</button>
  </form>
